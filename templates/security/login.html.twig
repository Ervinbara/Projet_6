{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../assets/css/navbar_other_page.css"/>
{% endblock %}

{% block body %}
    <h1>Connexion</h1>
    
    <form action="{{ path('security_login')}}" method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required name="_username">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required name="_password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="nav-link" href="{{ path('security_forgot_password') }}">Mot de passe oubli√© ?</a>
      </form>
      {% block map %}{% endblock %}
      {% block footer %}{% endblock %}
{% endblock %}