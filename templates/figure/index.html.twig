{% extends 'base.html.twig' %}

{% block banner %}
    <section class="banner">    
         <div class="container">
            <div class="col-sm-6">
                <h2>Bienvenue</h2>
                <p>Snowboard</p>
                <br/>
                <a href="#ancre" class="btn btn-primary">Voir plus</a>
                <a class="btn btn-success" href="./images/cv.pdf">Lien vers mon cv</a>
            </div>
        </div>
    </section>
{% endblock %}

{% block body %}
    <p> Figures </p>

    {% for figure in figures %}
        <div class="figure">
            {{ figure.name }}
                {% for image in figure.images %}
                    <div>
                        <img src="{{ asset('/images/figures/uploads/'~image.name) }}" alt="" width="150">
                    </div>
                {% endfor %}
        </div>
    {% endfor %}

{% endblock %}
