{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="../assets/css/figure_home.css"/>
{% endblock %}

{% block banner %}
    <section class="banner">    
         <div class="container">
            <div class="col-sm-6">
                <h2>Bienvenue</h2>
                <p>Snowboard</p>
                <br/>
                <a href="#ancre" class="btn btn-primary">Voir plus</a>
                <a class="btn btn-success" href="./images/cv.pdf">Lien vers mon cv</a>
            </div>
        </div>
    </section>
{% endblock %}

{% block body %}
    <h2> Figures </h2>
        <div class="wrapper">
            {% for figure in figures %}            
                <div class="card">
                    <div class="card-banner">
                        <p class="category-tag popular">{{ figure.category.title }}</p>
                        {% if figure.images | length > 0 %}
                            <a href="{{ path('figure_show', {'id': figure.id}) }}">
                                <img class="banner-img" src="{{ asset('/images/figures/uploads/'~figure.images[0].name) }}" alt="figure" width="150">
                            </a>
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <h2 class="blog-title">{{ figure.name }}</h2>
                        <p class="blog-description">{{ figure.description|raw }}</p>
                        <div class="btn-more-update">
                            <a class="btn btn-primary" href="{{ path('figure_show', {'id': figure.id}) }}">Voir plus</a>
                            <a class="btn btn-success" href="{{ path('edit_figure',{'id': figure.id}) }}">Modifier</a>
                        </div>
                        {# <div class="card-profile">
                        <img class="profile-img" src='https://images.unsplash.com/photo-1554780336-390462301acf?ixlib=rb-1.2.1&q=80&fm=jpg&crop=entropy&cs=tinysrgb&w=400&fit=max&ixid=eyJhcHBfaWQiOjE0NTg5fQ' alt=''>
                         #}
                        {# <div class="card-profile-info">
                            <h3 class="profile-name">Ervin</h3>
                        </div> #}
                        {# </div> #}
                    </div>
                </div>
                    
            {% endfor %}
            <a href="#" id="loadMore">Voir plus</a>
        </div>
        
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="../assets/js/loadmore.js"></script>
{% endblock %}