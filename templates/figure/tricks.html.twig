{% for figure in figures %}
    <div class="card">
        <div class="card-banner">
            <a href="{{ path('figure_show', {'id': figure.id}) }}">
                {% if figure.category.title is defined %}
                    <p class="category-tag popular">{{ figure.category.title }}</p>
                {% else %}
                    <p class="category-tag popular">Non repertori√©</p>
                {% endif %}
                {% if figure.images | length > 0 %}
                    <img class="banner-img" src="{{ asset('/images/figures/uploads/'~figure.images[0].name) }}"
                         alt="figure" width="150">
                {% else %}
                    <img class="banner-img" src="{{ asset('/images/figures/uploads/default.jpg') }}" alt="figure">
                {% endif %}
            </a>
        </div>
        <div class="card-body">

            <div class="btn-info-trick">
                <a href="{{ path('figure_show', {'id': figure.id}) }}" style="color: black">
                    {{ figure.name }}
                </a>
                {% if app.user %}
                    <a href="{{ path('edit_figure',{'id': figure.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('delete_figure',{'id': figure.id}) }}"
                       onclick="return confirm('Voulez vous vraiment supprimer ce trick ?')"><i
                                class="fas fa-trash-alt"></i></a>
                {% endif %}
            </div>
        </div>
    </div>
{% endfor %}
